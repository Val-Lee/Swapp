@{
    ViewBag.Title = "Home Page";
}
<div class="nav">
    <div class="col-lg-12">
        @foreach (ProjectSwapp.Models.SwappPosts item in ViewBag.item)
        {
            <div class="col-lg-10 col-lg-offset-1 row">
                <div class="panel-body">
                    @using (Html.BeginForm("Requestpost", "Manage", FormMethod.Post))
                    {
                        <div class="col-lg-3 img">
                            
                            @Html.Raw("<img name='Image' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.ImageData) + "\" />")
                        </div>
                        <div class="col-lg-4">                         
                            @Html.Label("Status:", new { @class = "control-label" })
                            @Html.DisplayFor(model => item.Status, new { @class = "form-control" })
                            <br />
                            @Html.Label("Name:", new { @class = "control-label" })
                            @Html.DisplayFor(model => item.Name, new { @class = "form-control" })
                            <br />
                            @Html.Label("Description:", new { @class = "control-label" })
                            <br />
                            @Html.DisplayFor(model => item.Description, new { @class = "form-control", @maxlength = "200", @style = "max-width:inherit", @rows = "5" })
                        </div>
                        <div class="col-lg-3">
                            @Html.Label("Address:", new { @class = "control-label" })
                            @Html.DisplayFor(model => item.Address, new { @class = "form-control" })
                            <br />
                            @Html.Label("Date:", new { @class = "control-label" })
                            @Html.DisplayFor(model => item.DateCreatePost, new { @class = "form-control" })
                            <br />
                            @Html.Label("Points:", new { @class = "control-label" })
                            @Html.DisplayFor(model => item.SubCategory, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <input type="submit" value="Request" class="btn btn-default form-control" />
                        </div>
                    }
                </div>
            </div>
        }
    </div>    
</div>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")